modules = ["ruby-3.2", "swift-5.8"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter329", "uv", "gemini-cli"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web"

[[workflows.workflow]]
name = "Flutter Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["flutter", "run", "-d", "web-server", "--web-port=5000", "--web-hostname=0.0.0.0", "--release"]
build = ["flutter", "build", "web", "--release"]
